<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">Account Balance</div>
      <div class="card-body">
        <table class="table table-striped">
          <thead class="thead-light">
          <tr>
            <th scope="col">Currency</th>
            <th scope="col">Balance</th>
          </tr>
          </thead>
          <tbody>
            <% balance.each do |currency, balance| %>
            <tr>
              <td><%= currency %></td>
              <td><%= balance %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-3">
    <div class="card">
      <div class="card-header">Trades</div>
      <div class="card-body">
        <a href="/trades" role="button" class="btn btn-primary" >show trades</a>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card">
      <div class="card-header">Orders</div>
      <div class="card-body">
        <a href="/orders" role="button" class="btn btn-primary" >show orders</a>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card">
      <div class="card-header">Ledgers</div>
      <div class="card-body">
        <a href="/ledgers" role="button" class="btn btn-primary" >show ledgers</a>
      </div>
    </div>
  </div>
</div>
